const academicYear = currentMonth >= 5 ? currentYear - 2024 + 1 : currentYear - 2024;
const yearSuffix = (year) => {
  switch (year) {
    case 1:
      return "1st";
    case 2:
      return "2nd";
    case 3:
      return "3rd";
    default:
      return `${year}th`;
  }
};
const studentYear = yearSuffix(academicYear);

const lastedProjects = projects.slice(0, 1);
